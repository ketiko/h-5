<p id="notice"><%= notice %></p>

<h1>Appreciations</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>User</th>
      <th>Points</th>
      <th>Token</th>
      <th>Given</th>
      <th>URL</th>
      <th>QR Code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @appreciations.each do |appreciation| %>
      <tr>
        <td><%= appreciation.id %></td>
        <td><%= appreciation.user.email %></td>
        <td><%= appreciation.points %></td>
        <td><%= appreciation.token %></td>
        <td><%= appreciation.given %></td>
        <td><%= link_to give_appreciation_url(appreciation), appreciation.url %></td>
        <td><img src="<%=  appreciation.qr_code %>"></img></td>
        <td><%= link_to 'Show', appreciation %></td>
        <td><%= link_to 'Edit', edit_appreciation_path(appreciation) %></td>
        <td><%= link_to 'Destroy', appreciation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Appreciation', new_appreciation_path %>
